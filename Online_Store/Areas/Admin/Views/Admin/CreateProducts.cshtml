@model Online_Store.Areas.Admin.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<form asp-area="Admin" asp-controller="Product" asp-action="CreateProducts">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <div>
        <label asp-for="FirstName">Имя</label><br />
        <input type="text" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="LastName">Фамилия</label><br />
        <input type="text" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Patronymic">Отчество</label><br />
        <input type="text" asp-for="Patronymic" />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Email">Почта</label><br />
        <input type="text" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Создать" />
</form>