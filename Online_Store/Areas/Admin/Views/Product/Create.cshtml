@model Online_Store.Areas.Admin.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-area="Admin" asp-controller="Product" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <div>
        <label asp-for="Name"></label><br />
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label><br />
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"> </label><br />
        <input type="text" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label><br />
        <input type="text" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label> <br />
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
    </div>
    <br />
    <input type="submit" value="Создать" />
</form>