@using Online_Store.Areas.Admin.Models

@model ProductViewModel

<form method="post" asp-area="Admin" asp-controller="Product" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label><br />
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label><br />
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"> </label><br />
        <input type="text" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label><br />
        <input type="text" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label> <br />
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
    </div>
    <br />
    <input type="submit" value="Отредактировать" />
</form>
<div>
    <a asp-area="Admin" asp-controller="Product" asp-action="Index">Вернуться</a>
</div>