@{
    ViewData["Title"] = "StartAdminPage";
}

<div class="mx-auto" style="width: 200px;">
    <h4> Действия </h4>
    <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Просмотр товаров</h5>
            <p class="card-text">Стандартные CRUD с товарами.</p>
            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-primary">Перейти</a>
        </div>
    </div>
    <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Просмотр категорий</h5>
            <p class="card-text">Стандартные CRUD с категориями.</p>
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-primary">Перейти</a>
        </div>
    </div>
    <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Просмотр ролей</h5>
            <p class="card-text">Наделениями правами пользователей.</p>
            <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn btn-primary">Перейти</a>
        </div>
    </div>
</div>
<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Column 1</th>
            <th>Column 2</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Row 1 Data 1</td>
            <td>Row 1 Data 2</td>
        </tr>
        <tr>
            <td>Row 2 Data 1</td>
            <td>Row 2 Data 2</td>
        </tr>
    </tbody>
</table>

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>