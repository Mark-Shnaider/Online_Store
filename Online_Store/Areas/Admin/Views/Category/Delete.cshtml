@using Online_Store.Areas.Admin.Models

@model CategoryViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить эту категорию?</h1>

<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название категории
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Описание категории
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>

<form method="post" asp-area="Admin" asp-controller="Category" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Удалить" class="btn btn-danger" /> |
    <a asp-area="Admin" asp-controller="Category" asp-action="Index">Вернуться</a>
</form>
