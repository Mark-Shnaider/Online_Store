@model Online_Store.Areas.Identity.Models.LoginViewModel;
@{
    ViewData["Title"] = "Authorize";
}

<div class="mx-auto" style="width: 200px;">
    <form class="px-4 py-3" method="post" asp-area="Identity" asp-controller="Account" asp-action="Authorize">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input class="form-control" type="text" asp-for="UserName" placeholder="Имя пользваотеля">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" type="password" asp-for="Password" placeholder="Пароль">
        </div>
        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label" asp-for="RememberMe">
                    Запомнить меня
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Авторизоваться</button>
    </form>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" asp-action="Register">Первый раз? Зарегестрироваться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("~/Areas/Views/Shared/_ValidationScriptsPartial.cshtml");}
}