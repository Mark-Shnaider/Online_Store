@using Online_Store.Models

@model ShoppingCartViewModel

@if (User.Identity.IsAuthenticated)
{
    @: <div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th> </th>
                    <th>Название продукта</th>
                    <th>Количество</th>
                    <th>Цена</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCartItems)
                {
                    <tr>
                        <td><img src="https://dummyimage.com/50x50/55595c/fff" /> </td>
                        <td>@item.Product.Name</td>
                        <td>@item.Amount </td>
                        <td>@item.SubTotal ₽</td>
                        <td><input class="btn btn-danger" type="submit" data-cart-id="@Model.Id" data-item-id="@item.Id" onclick="RemoveFromCart(this)" value="Remove from cart" /> </td>
                    </tr>
                }
                @{
                    decimal Total = 0;
                    foreach (var item in Model.ShoppingCartItems)
                        Total += item.SubTotal;
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><strong>Итого</strong></td>
                    <td class="text-right"><strong>@Total ₽</strong></td>
                </tr>
            </tbody>
        </table>
    @: </div>
    @if (Total > 0)
    {
        @: <div class="col-sm-12 col-md-6 text-right">
            <a asp-controller="Order" asp-action="Order" asp-route-CartId="@Model.Id" class="btn btn-lg btn-block btn-success text-uppercase">Оформить заказ</a>
        @: </div>
    }

}


@section Scripts
{
    <script type="text/javascript" src="~/js/shoppingcart.js"></script>
}