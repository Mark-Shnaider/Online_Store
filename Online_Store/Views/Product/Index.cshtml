@using Online_Store.Models
@using System.Globalization

@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col">
            <h4> Выбрать категорию</h4>
            <label></label> <br />
            <select id="check" data-cart-id="@Model.Id" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control-lg"></select>
        </div>
        <div class="col">
            <div id="ProductContainer"> </div>
        </div>
        <div class="col">
            <div id="CartContainer"></div>
        </div>
    </div>
</div>



@section scripts {
    <script type="text/javascript" src="~/js/shoppingcart.js"></script>
    <script type="text/javascript"src="~/js/products.js" ></script>
    <script type="text/javascript">
        UpdateShopCartItems("@Model.Id")
        UpdateProducts("@Model.UserId", "@Model.Id");
    </script>
}

